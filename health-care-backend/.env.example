# This is an example .env file for your application.
# Copy this file to a new file named .env in the same directory
# and fill in the actual values.
# The .env file should NOT be committed to version control.

# Application Configuration
# The port on which the server will listen
PORT=5000
# The environment the application is running in (e.g., development, production, test)
NODE_ENV=development
# Database connection URL (e.g., MongoDB, PostgreSQL)
# Example for MongoDB: mongodb://localhost:27017/yourDBName
# Example for PostgreSQL: postgresql://user:password@host:port/database
DB_URL=mongodb+srv://database_username:database_password@your_cluster_name.mongodb.net/your_db_name?retryWrites=true&w=majority&appName=your_app_name

# JWT (JSON Web Token) Configuration
# Secret key for signing access tokens. Make this long and random.
JWT_ACCESS_SECRET=your_jwt_access_secret_here
# Expiration time for access tokens (e.g., 1h, 1d, 7d)
JWT_ACCESS_EXPIRES=1h
# Secret key for signing refresh tokens. Make this long and random.
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here
# Expiration time for refresh tokens (e.g., 7d, 30d)
JWT_REFRESH_EXPIRES=7d

# BCRYPT Configuration
# Number of salt rounds for bcrypt hashing. Higher value means more secure but slower.
BCRYPT_SALT_ROUND=10

# Super Admin Credentials
# Email for the initial super admin user (for development/seeding)
SUPER_ADMIN_EMAIL=admin@example.com
# Password for the initial super admin user (for development/seeding)
SUPER_ADMIN_PASSWORD=strongdevpassword123

# Google OAuth Configuration
# Your Google Client ID from Google Cloud Console
GOOGLE_CLIENT_ID=your_google_client_id_here
# Your Google Client Secret from Google Cloud Console
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
# The redirect URL for Google OAuth after authentication
GOOGLE_CALLBACK_URL=http://localhost:5000/auth/google/callback

# Express Session Configuration
# Secret key for signing the session ID cookie. Make this long and random.
EXPRESS_SESSION_SECRET=your_express_session_secret_here_a_very_long_random_string


# Frontend URL
FRONTEND_URL=http://localhost:5173

# SSL Commerz Configuration
# Your store ID provided by SSL Commerz
SSL_STORE_ID=your_ssl_store_id
# Your store password provided by SSL Commerz
SSL_STORE_PASS=your_ssl_store_pass
# Session API to generate transaction, use sandbox for development
SSL_PAYMENT_API=https://sandbox.sslcommerz.com/gwprocess/v3/api.php
# Validation API, use sandbox for development
SSL_VALIDATION_API=https://sandbox.sslcommerz.com/validator/api/validationserverAPI.php
# IPN (Instant Payment Notification) URL
SSL_IPN_URL=http://localhost:5000/api/v1/payment/validate-payment

# SSL Commerz Backend Redirect URLs
SSL_SUCCESS_BACKEND_URL=http://localhost:5000/api/v1/payment/success
SSL_FAIL_BACKEND_URL=http://localhost:5000/api/v1/payment/fail
SSL_CANCEL_BACKEND_URL=http://localhost:5000/api/v1/payment/cancel

# SSL Commerz Frontend Redirect URLs
SSL_SUCCESS_FRONTEND_URL=http://localhost:5173/payment/success
SSL_FAIL_FRONTEND_URL=http://localhost:5173/payment/fail
SSL_CANCEL_FRONTEND_URL=http://localhost:5173/payment/cancel

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# SMTP (Simple Mail Transfer Protocol) Configuration
SMTP_PASS=your_smtp_password
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_USER=your_smtp_email@gmail.com
SMTP_FROM=your_smtp_email@gmail.com

# Redis Configuration
REDIS_HOST=your_redis_host
REDIS_PORT=your_redis_port
REDIS_USERNAME=your_redis_username
REDIS_PASSWORD=your_redis_password